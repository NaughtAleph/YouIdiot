doctype html
html(lang="en")
	head
		title Condecending Corrections
		link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD' crossorigin='anonymous')
		script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js' integrity='sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN' crossorigin='anonymous')
		link(rel='stylesheet' href='css/base.css')
	body
		h1 Condecending Corrections
		div(class='row justify-content-center')
			div(class='col-3')
				form(action='contestant' method='post' id='joinRoom')
					input(type='submit' class='w-100 text-wrap btn btn-secondary' id='join' value='Join Room')
		div(class='row justify-content-center')
			div(class='col-1 separator') OR
		//- div(class='row justify-content-center')
		form(action='/host' method='post' id='createRoom' class='row justify-content-center')
			div(class='col-3')
				input(type='text' class='form-control' id='username' name='username' placeholder='Username')
			div(class='w-100')
			div(class='col-3')
				input(type='password' class='form-control' id='password' name='password' placeholder='Password')
			div(class='w-100')
			div(class='col-3')
				input(type='submit' class='w-100 m-0 btn btn-secondary' id='login' value='Login')